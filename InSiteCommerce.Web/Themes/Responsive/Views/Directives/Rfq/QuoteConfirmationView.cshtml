@using Insite.Rfq.Content
<div>
    <h1>{{ vm.quote.isJobQuote ? '@T("Job Quote")' : '@T("Sales Quote")'}} <span ng-bind="vm.quote.statusDisplay"></span></h1>
    
    <div class="btns hide-for-small">
        <a id="quoteConfiramtionViewViewMyQuotesButton" href="@(Url.ContentPage<RfqMyQuotesPage>())" class="btn secondary btn-view-quotes">@T("View My Quotes")</a>
        <a id="quoteConfiramtionViewContinueShoppingButton" href="@(Url.ContentPage<HomePage>())" class="btn secondary btn-continue-shopping">@T("Continue Shopping")</a>
        <a id="quoteConfiramtionViewPrintButton" href="javascript: window.print();" class="btn tertiary btn-print">@T("Print")</a>
    </div>

    <div class="cm" ng-include="'quoteConfirmation_topContent'"></div>
    <div class="row order-details">
        <div class="medium-5 large-5 columns col-details">
            <h2 ng-if="vm.quote.isJobQuote">@T("Job Name"): <span ng-bind="vm.quote.jobName"></span></h2>
            <h2>@T("Sales Rep"): <span ng-bind="vm.quote.salespersonName"></span></h2>
            <h2>@T("Customer"): <span ng-bind="vm.quote.billTo.customerName"></span></h2>
            <h2>@T("Ship To"): <span ng-bind="vm.quote.shipTo.fullAddress"></span></h2>
            <h2>@T("Quote Number"): <span><a id="quoteConfirmationViewQuoteNumberLink" href='@(Url.ContentPage<RfqQuoteDetailsPage>())?quoteId={{vm.quote.id}}' ng-bind="vm.quote.orderNumber"></a></span></h2>
            <h2>@T("Date Submitted"): <span ng-bind="vm.quote.orderDate | date:'shortDate'"></span></h2>
            <div ng-if="vm.quote.notes.trim().length > 0">
                <h2>@T("Notes"):</h2>
                <p><span ng-bind="vm.quote.notes"></span></p>
            </div>
        </div>
        <div class="large-7 columns col-items">
            <isc-cart-lines cart="vm.quote" include-quote-required="true" class="item-list cart-items"></isc-cart-lines>
        </div>
    </div>
        
    <div class="btns show-for-small">
        <a id="quoteConfirmationViewSmallViewMyQuotesButton" href="@(Url.ContentPage<RfqMyQuotesPage>())" class="btn secondary btn-view-quotes">@T("View My Quotes")</a>
        <a id="quoteConfirmationViewSmallContinueShoppingButton" href="@(Url.ContentPage<HomePage>())" class="btn secondary btn-continue-shopping">@T("Continue Shopping")</a>
    </div>
</div>

<div class="search-container">
    <form>
        <div class="search-input">
            <label for="criteria">@T("Search")</label>
            <input ng-model="vm.criteria" type="text" class="isc-searchAutoComplete" placeholder="@T(" enter keyword or item #")"
                   isc-enter="vm.search()"
                   isc-product-search-autocomplete
                   onsuggestionclick="vm.onSuggestionClick"
                   transformresult="vm.transformResult"
                   categoryselectorid="searchCategory-{{$id}}"
                   name="criteria" data-autocompleteurl="@Url.RouteUrl("productsv1autocomplete", new { httproute=true })">
        </div>
        <div class="search-button">
            <button class="btn primary fastClick" ng-click="vm.search()">@T("Go")</button>
        </div>
    </form>
</div>

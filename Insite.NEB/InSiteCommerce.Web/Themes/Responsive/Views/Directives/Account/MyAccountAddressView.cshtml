<form id="addressForm">
    <div class="bill-to">
        <h3>@T("Billing Information")</h3>
        <div class="bill-to-form">
            <div class="billing-info">
                <div class="required-msg" style="height: 53px; margin: 0"><span class="redTxt">*</span>@T("Required")</div>
                <isc-address-edit prefix="bt" show-email="true" address="vm.billTo" countries="vm.countries"></isc-address-edit>
            </div>
        </div>
    </div>

    <div class="ship-to">
        <h3>@T("Shipping Information")</h3>
        <div class="ship-to-form">
            <div id="shipToAddress" class="shipping-info">
                <div class="ship-select">
                    <select id="shipTo" name="shipTo"
                            ng-model="vm.shipTo"
                            ng-options="shipTo.label for shipTo in vm.billTo.shipTos"></select>
                </div>
                <isc-address-edit prefix="st" show-email="false" address="vm.shipTo" countries="vm.countries"></isc-address-edit>
            </div>
        </div>
    </div>

    <div class="btns"><button id="myAccountAddressViewSaveButton" type="button" class="btn primary btn-save" ng-click="vm.save()">@T("Save")</button></div>
</form>